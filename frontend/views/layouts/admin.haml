%html{:lang => "en", "ng-app" => "RDash"}
  %head
    :css
      @charset "UTF-8";[ng\:cloak],[ng-cloak],[data-ng-cloak],[x-ng-cloak],.ng-cloak,.x-ng-cloak,.ng-hide{display:none !important;}ng\:form{display:block;}.ng-animate-block-transitions{transition:0s all!important;-webkit-transition:0s all!important;}.ng-hide-add-active,.ng-hide-remove{display:block!important;}
    %meta{:charset => "UTF-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title RDash AngularJS
    / STYLES
    / build:css lib/css/main.min.css
    %link{:href => "components/bootstrap/dist/css/bootstrap.min.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "components/font-awesome/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "components/rdash-ui/dist/css/rdash.min.css", :rel => "stylesheet", :type => "text/css"}/
    / endbuild
    / SCRIPTS
    / build:js lib/js/main.min.js
    %script{:src => "components/angular/angular.min.js", :type => "text/javascript"}
    %script{:src => "components/angular-bootstrap/ui-bootstrap-tpls.min.js", :type => "text/javascript"}
    %script{:src => "components/angular-cookies/angular-cookies.min.js", :type => "text/javascript"}
    %script{:src => "components/angular-ui-router/release/angular-ui-router.min.js", :type => "text/javascript"}
    / endbuild
    / Custom Scripts
    %script{:src => "js/dashboard.min.js", :type => "text/javascript"}
  %body{"ng-controller" => "MasterCtrl"}
    #page-wrapper{"ng-class" => "{'open': toggle}", "ng-cloak" => ""}
      / Sidebar
      #sidebar-wrapper
        %ul.sidebar
          %li.sidebar-main
            %a{"ng-click" => "toggleSidebar()"}
              Dashboard
              %span.menu-icon.glyphicon.glyphicon-transfer
          %li.sidebar-title
            %span NAVIGATION
          %li.sidebar-list
            %a{:href => "#"}
              Dashboard
              %span.menu-icon.fa.fa-tachometer
          %li.sidebar-list
            %a{:href => "#/tables"}
              Tables
              %span.menu-icon.fa.fa-table
        .sidebar-footer
          .col-xs-4
            %a{:href => "https://github.com/rdash/rdash-angular", :target => "_blank"}
              Github
          .col-xs-4
            %a{:href => "https://github.com/rdash/rdash-angular/README.md", :target => "_blank"}
              About
          .col-xs-4
            %a{:href => "#"}
              Support
      / End Sidebar
      #content-wrapper
        .page-content
          / Header Bar
          .row.header
            .col-xs-12
              .user.pull-right
                .item.dropdown
                  %a.dropdown-toggle{:href => "#"}
                    %img{:src => "img/avatar.jpg"}/
                  %ul.dropdown-menu.dropdown-menu-right
                    %li.dropdown-header
                      Joe Bloggs
                    %li.divider
                    %li.link
                      %a{:href => "#"}
                        Profile
                    %li.link
                      %a{:href => "#"}
                        Menu Item
                    %li.link
                      %a{:href => "#"}
                        Menu Item
                    %li.divider
                    %li.link
                      %a{:href => "#"}
                        Logout
                .item.dropdown
                  %a.dropdown-toggle{:href => "#"}
                    %i.fa.fa-bell-o
                  %ul.dropdown-menu.dropdown-menu-right
                    %li.dropdown-header
                      Notifications
                    %li.divider
                    %li
                      %a{:href => "#"} Server Down!
              .meta
                .page
                  Dashboard
                .breadcrumb-links
                  Home / Dashboard
          / End Header Bar
          / Main Content
          %div{"ui-view" => ""}
            / End Page Content
            / End Content Wrapper
            / End Page Wrapper